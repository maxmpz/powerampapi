<!-- NOTE: popup container is detached from here, attached to menu placeholder, then scene is run from scene_button_menu_closed to scene_button_menu.
	 scene_button_menu/scene_button_menu_closed params are specifically created for popup container itself
-->
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<com.maxmpz.widget.base.FastTextView android:id="@+id/dsp_info_title"
		style="?PopupInfoTextTitle"
		android:text="@string/audio_info"
		android:visibility="invisible"
	/>
	<SceneParams w:scene="@id/scene_button_menu"
		w:recalcChildren="on_start"
		android:visibility="visible"
	/>
	<SceneParams w:scene="@id/scene_button_menu_closed"
		w:recalcChildren="on_start"
		android:visibility="gone"
	/>
		
	<!-- Put gear icon out of main content, next to title -->
	<com.maxmpz.widget.base.BusActionButton android:id="@+id/configure_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|right"
		android:layout_marginTop="10dp"
		android:layout_marginRight="4dp"
		w:layout_consumeSpace="vertical"
		
		android:visibility="invisible"
		
		android:drawable="@drawable/settings_24dp"
		w:drawableTint="?colorIconPrimary"
		w:drawableOnly="true"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:background="@drawable/ripple_rounded_large"
		android:clickable="true"
		android:focusable="true"
		w:busId="@id/bus_app_cmd"
		w:msgId="@id/cmd_app_open_settings"
		w:string="?settings_target_audio"
		android:contentDescription="@string/settings"
	/>
	<SceneParams w:scene="@id/scene_button_menu"
		w:recalcChildren="on_start"
		android:visibility="visible"
	/>
	<SceneParams w:scene="@id/scene_button_menu_closed"
		w:recalcChildren="on_start"
		android:visibility="gone"
	/>
		
	<com.maxmpz.widget.base.NonOverlappingView android:id="@+id/dsp_info_image"
		style="?PopupDSPInfoImage"
		android:visibility="visible"
	/>
	<SceneParams w:scene="@id/scene_button_menu"
		w:recalcChildren="on_start"
		android:visibility="visible"
	/>
	<SceneParams w:scene="@id/scene_button_menu_closed"
		w:recalcChildren="on_start"
		android:visibility="gone"
	/>
	
	<com.maxmpz.widget.player.InfoTextView android:id="@+id/dsp_info_text"
		style="?PopupDSPInfoText"
		w:infoTextHelper=".widget.DSPInfoHelper"
		w:dspInfoImage="@+id/dsp_info_image"
	/>
	<SceneParams w:scene="@id/scene_button_menu"
		style="?PopupContent_scene_button_menu"
		w:layout_unlimitedMeasure="true"
	/>
	<SceneParams w:scene="@id/scene_button_menu_closed"
		android:visibility="gone"
	/>
	
</merge>