<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android" 
	android:color="?colorKnobRipple">
	<item>
		<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="300">
			<!-- NOTE: solid is needed for ripple -->
			<item android:state_enabled="false">
				<shape android:shape="oval">
					<stroke android:color="?colorKnobDisabled" android:width="1dp"/>
					<solid android:color="?colorKnobBg"/>
				</shape>
			</item>

			<item android:state_pressed="true">
				<shape android:shape="oval">
					<stroke android:color="?colorKnobPressed" android:width="2.5dp"/>
					<solid android:color="?colorKnobBg"/><!-- NOTE: solid is needed for ripple -->
				</shape>
			</item>
			
			<item>
				<shape android:shape="oval">
					<stroke android:color="?colorKnob" android:width="1dp"/>
					<solid android:color="?colorKnobBg"/><!-- NOTE: solid is needed for ripple -->
				</shape>
			</item>
		</selector>
	</item>
</ripple>

