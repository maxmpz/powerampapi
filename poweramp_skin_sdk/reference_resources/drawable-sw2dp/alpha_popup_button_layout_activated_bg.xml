<?xml version="1.0" encoding="utf-8"?>

<!-- NOTE: fade duration is not parsed by Android -->
<level-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:minLevel="@integer/ITEM_BG_LEVEL_POPUP" android:maxLevel="10000"
		>
		<shape>
			<corners android:radius="?corners_popup"/>
			<solid android:color="?colorBgPrimary"/>
		</shape>
	</item>
	
	<item android:minLevel="0" android:maxLevel="0">
		<selector
			android:enterFadeDuration="250"
			android:exitFadeDuration="250"
			>
			<item android:state_activated="true" android:drawable="@drawable/rounded_generic" />

			<item>
				<ripple android:color="?colorLessContrastRipple">
					<item android:id="@android:id/mask">
						<shape>
							<corners android:radius="?corners_generic"/>
							<solid android:color="#000"/>
						</shape>
					</item>

					<item>
						<shape>
							<corners android:radius="?corners_generic"/>
							<solid android:color="?colorBgPlayerButton"/>
						</shape>
					</item>
				</ripple>
			</item>
		</selector>
	</item>
</level-list>
