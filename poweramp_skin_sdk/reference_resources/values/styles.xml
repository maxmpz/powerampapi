<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:z="http://schemas.android.com/apk/res/com.maxmpz.audioplayer">
    <!-- Quick Menu -->
    <style name="QuickMenuBelowAnimation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out</item>
    </style>

    <style name="QuickMenuAboveAnimation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

    <style name="QuickOptionsMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/options_panel_enter</item>
        <item name="android:windowExitAnimation">@anim/options_panel_exit</item>
    </style>
    

	<!-- Settings Theme -->
	<style name="ChangedTextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
	</style>
	
	<style name="TreeViewList" parent="@android:style/Widget.ListView">
    	<item name="android:divider">@drawable/divider_horizontal_dark</item>
    </style>	
    
	<!-- NOTE: correct status styles exist only for 2.3+, thus, they are overriden in values-xx for lower versions -->
	<style name="status_text_1" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
	</style>    
	
	<style name="status_text_2" parent="@android:style/TextAppearance.StatusBar.EventContent">
	</style>
	
	<style name="status_background">
	    <!--<item name="android:background">#ff111111</item> needed for v14 -->
	</style>
	
    <style name="ActionBarOffset">
        <!-- nothing, used only for v11 -->
    </style>
    <style name="ActionBarBgFill">
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">0px</item>    
    </style>
</resources>


