<resources>
	<!-- Optional styles. Applied based on user preferences. 
	     Styles for these attributes should be defined in main skin theme, but these styles will be applied only if appropriate option
	     is set in Poweramp settings.
	     NOTE: attributes, e.g. com.maxmpz.audioplayer:attr/OptionRatingStars, etc. can be used to for skin <globalOption/> option argument -->
	<declare-styleable name="OptionalPoweruiStyles">
		<!-- Applied (over main theme style) when rating is enabled and set to stars -->
		<attr name="OptionRatingStars" format="reference"/>
		
		<!-- Applied (over main theme style) when rating is enabled and set to stars in menu only -->
		<attr name="OptionRatingStarsMenu" format="reference"/>

		<!-- Applied (over main theme style) when rating is enabled and set to like/unlike thumbs -->
		<attr name="OptionRatingLikeUnlike" format="reference"/>

		<!-- Applied (over main theme style) when rating is disabled -->
		<attr name="OptionRatingDisabled" format="reference"/>
		
		<!-- Applied (over main theme style) when track counter is enabled -->
		<!-- Deprecated, not used anymore -->
		<attr name="OptionCounter" format="reference"/>
		
		<!-- Applied (over main theme style) when Chromecast buttons should be disabled completely. NOTE: default style shows CC button on top of the main screen AA -->
		<attr name="OptionCCDisabled" format="reference"/>

		<!-- Applied (over main theme style) when Chromecast should be shown as main UI icon. NOTE: default attribute is 0 (not set) for this option-->
		<attr name="OptionCCMainUI" format="reference"/>

		<!-- Applied (over main theme style) when Chromecast should be shown as main UI button. NOTE: default style shows CC button on top of the main screen AA -->
		<attr name="OptionCCMainUIButton" format="reference"/>

		<!-- Applied (over main theme style) when Chromecast should be shown in the main menu. NOTE: default style shows CC button on top of the main screen AA -->
		<attr name="OptionCCInMenu" format="reference"/>
		
		<!-- Applied (over main theme style) when Chromecast should be shown in main UI AND main menu -->
		<attr name="OptionCCMainUIAndInMenu" format="reference"/>

		<!-- Applied (over main theme style) when meta should be shown in headers -->
		<attr name="OptionHeaderMeta" format="reference"/>
		
		<!-- Applied (over main theme style) when hide menu option is enabled -->
		<attr name="OptionHideMenu" format="reference"/>

		<!-- Applied (over main theme style) when hide lyrics button option is enabled -->
		<attr name="OptionHideLyricsButton" format="reference"/>

		<!-- Applied (over main theme style) when Keep Aspect Ratio option is enabled -->
		<attr name="OptionAAKeepAspect" format="reference"/>
		
		<!-- Applied (over main theme style) when Crop Album Art option is enabled -->
		<attr name="OptionAACrop" format="reference"/>
		
		<!-- Applied (over main theme style) when equalizer frs visualization set to rounded -->
		<attr name="OptionEquFRSRounded" format="reference"/>

		<!-- Applied (over main theme style) when header buttons are completely disabled (i.e. replaced by bottom buttons) -->
		<attr name="OptionNoHeaderButtons" format="reference"/>

		<!-- Applied (over main theme style) when we want the extended AZ scroll including the local alphabet -->
		<attr name="OptionLocalizedAZScroll" format="reference"/>

		<!-- Applied (over main theme style) for screens with rounded corners - only on Android 12+ where appropriate API exists -->
		<attr name="OptionRoundedScreenCorners" format="reference"/>
				
	</declare-styleable>
</resources>