		<attr name="popupEnterAnimTime"/><!-- ms -->
		<attr name="popupExitAnimTime"/><!-- ms -->
		<attr name="buttonAnimTime" format="integer"/><!-- ms -->
		<attr name="menuPlaceholder"/>
