		<attr name="noUpdateInTransition" format="boolean"/>
		
		<!-- Show the default (android:text) text if state is empty/null -->
		<attr name="defaultTextOnNoState" format="boolean"/>
		
		<attr name="stateType"><!-- Type of state to format -->
