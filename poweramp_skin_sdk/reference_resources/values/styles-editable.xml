	</style>

	<style name="SubAAButtonsEditScrollableCont">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0dp</item>
		<item name="layout_attachBottom">parent</item>
		<item name="layout_attachTop">parent</item>
		<item name="android:scrollbarStyle">insideOverlay</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:clipToPadding">false</item>
		<!-- Matches bg corners rounding: drawable/alpha_popup_button_layout_bg / ?corners_popup -->
		<item name="android:paddingBottom">?corners_popup</item>
